#:kivy 2.1.0

<ItemLabel@Label>:
    font_size: '18sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    color: 1, 1, 1, 1
    text_color: self.color
<start>:
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5
        BoxLayout:
            spacing: 5
            size_hint: 1, 0.13
            Spinner:
                id: spin
                text: 'Выберите класс'
                font_size: 28
                values: ''
                on_press: root.class_school()
                on_text: root.clicked(spin.text)
            Button:
                text: 'Обновить \n данные'
                font_size: 24
                size_hint: 0.45, 1
                on_press: root.update_data()
        BoxLayout:
            size_hint: 1, 0.1
            spacing: 10
            Button:
                text: '<'
                font_size: 28
                on_release: root.yesterday()
                size_hint: 0.45, 1
            Label:
                id: day_label
                text: 'День недели'
                font_size: 28
                size_hint: 1, 1
            Button:
                text: '>'
                font_size: 28
                size_hint: 0.45, 1
                on_press: root.tomorrow()

        GridLayout:
            cols: 3
            rows: 8
            Label:
                text: '№'
                size_hint: 0.2, 0.5
                color: 1, 1, 1, 1
                font_size: '22sp'
            Label:
                text: 'Звонки'
                font_size: '22sp'
                size_hint: 0.22, 0.5
            Label:
                text: 'Уроки'
                size_hint: 1, 0.5
                font_size: '22sp'
            Label:
                text: '1'
                size_hint: 0.2, 1
                color: 1, 1, 1, 1
