#:kivy 2.1.0

<ItemLabel@Label>:
    font_size: '18sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size
    color: 1, 1, 1, 1
    text_color: self.color
    font_name: 'segoepr.ttf'
<start>:
    Image:
        id: image
        source: app.image_source
        allow_stretch: True
        keep_ratio: False
    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5
        BoxLayout:
            spacing: 5
            size_hint: 1, 0.13
            Spinner:
                id: spin
                text: 'Выберите класс'
                font_size: '28sp'
                values: ''
                on_press: root.class_school()
                on_text: root.clicked(spin.text)
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
                font_name: 'segoepr.ttf'
            Button:
                id: bt1
                text: 'Обновить \n данные'
                font_size: '20sp'
                font_name: 'segoepr.ttf'
                size_hint: 0.45, 1
                on_press: root.update_data()
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
            Button:
                text: '...'
                font_size: '40sp'
                size_hint: 0.45, 1
                on_press: app.open_settings()
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
        BoxLayout:
            size_hint: 1, 0.1
            spacing: 10
            Button:
                text: '<'
                font_size: '28sp'
                on_release: root.yesterday()
                size_hint: 0.45, 1
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
                font_name: 'segoepr.ttf'
            Label:
                id: day_label
                text: 'День недели'
                font_size: 28
                font_name: 'segoepr.ttf'
                size_hint: 1, 1
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
            Button:
                text: '>'
                font_size: 28
                size_hint: 0.45, 1
                on_press: root.tomorrow()
                background_normal: ''
                background_color: 0.1843, 0.3098, 0.3098, 1
        GridLayout:
            cols: 3
            rows: 8
            Label:
                text: '№'
                size_hint: 0.2, 0.5
                color: 1, 1, 1, 1
                font_size: '22sp'
                font_name: 'segoepr.ttf'
            Label:
                text: 'Звонки'
                font_size: '22sp'
                size_hint: 0.22, 0.5
                font_name: 'segoepr.ttf'
            Label:
                text: 'Уроки'
